{
  "name": "secure-devsecops-app",
  "version": "1.0.0",
  "description": "Secure DevSecOps Pipeline Demo Application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level high",
    "docker:build": "docker build -t secure-app:latest .",
    "docker:run": "docker run -p 3000:3000 secure-app:latest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jest": "^29.5.3",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "devsecops",
    "security",
    "nodejs",
    "express",
    "docker",
    "kubernetes"
  ],
  "author": "DevSecOps Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/secure-devsecops-pipeline.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/secure-devsecops-pipeline/issues"
  },
  "homepage": "https://github.com/your-org/secure-devsecops-pipeline#readme"
}