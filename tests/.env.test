# Test Environment Configuration
NODE_ENV=test
PORT=3000

# Database Configuration (for testing)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_devsecops
DB_USER=test_user
DB_PASSWORD=test_password
DB_SSL=false

# Authentication (test keys)
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=10

# Redis Configuration (for testing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=10000
API_RATE_LIMIT=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=test_csrf_secret
SESSION_SECRET=test_session_secret

# External Services (test/mock endpoints)
SNYK_TOKEN=test_snyk_token
TRIVY_CACHE_DIR=/tmp/trivy-test
CHECKMARX_SERVER=http://localhost:8080
CHECKMARX_USERNAME=test_user
CHECKMARX_PASSWORD=test_password

# Monitoring (test configuration)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,txt,doc,docx

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Test-specific Configuration
DEBUG_TESTS=false
TEST_TIMEOUT=30000
E2E_APP_URL=http://localhost:3000
PERF_APP_URL=http://localhost:3000
SEC_APP_URL=http://localhost:3000

# CI/CD Test Configuration
CI=false
GITHUB_TOKEN=test_github_token
GITLAB_TOKEN=test_gitlab_token

# Cloud Configuration (for infrastructure tests)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
CLUSTER_NAME=test-cluster

# Kubernetes Test Configuration
KUBECONFIG=/tmp/test-kubeconfig
NAMESPACE=test-devsecops